if UBOOT_CONFIG_ARCH_MVEBU

config UBOOT_CONFIG_PINCTRL_ARMADA_37XX
	depends on UBOOT_CONFIG_ARMADA_3700 && UBOOT_CONFIG_PINCTRL_FULL
	bool "Armada 37xx pin control driver"
	help
	   Support pin multiplexing and pin configuration control on
	   Marvell's Armada-37xx SoC.

config UBOOT_CONFIG_PINCTRL_ARMADA_8K
	depends on UBOOT_CONFIG_ARMADA_8K && UBOOT_CONFIG_PINCTRL_FULL
	bool "Armada 7k/8k pin control driver"
	help
	   Support pin multiplexing and pin configuration control on
	   Marvell's Armada-8K SoC.

endif
