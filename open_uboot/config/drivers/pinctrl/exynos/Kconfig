config UBOOT_CONFIG_PINCTRL_EXYNOS
	bool

config UBOOT_CONFIG_PINCTRL_EXYNOS7420
	bool "Samsung Exynos7420 pinctrl driver"
	depends on UBOOT_CONFIG_ARCH_EXYNOS && UBOOT_CONFIG_PINCTRL_FULL
	select UBOOT_CONFIG_PINCTRL_EXYNOS
	help
	  Support pin multiplexing and pin configuration control on
	  Samsung's Exynos7420 SoC.

config UBOOT_CONFIG_PINCTRL_EXYNOS78x0
	bool "Samsung Exynos78x0 pinctrl driver"
	depends on UBOOT_CONFIG_ARCH_EXYNOS && UBOOT_CONFIG_PINCTRL_FULL
	select UBOOT_CONFIG_PINCTRL_EXYNOS
	help
	  Support pin multiplexing and pin configuration control on
	  Samsung's Exynos78x0 SoC.
