if UBOOT_CONFIG_TARGET_QEMU_VIRT

config UBOOT_CONFIG_SYS_BOARD
	default "qemu-riscv"

config UBOOT_CONFIG_SYS_VENDOR
	default "emulation"

config UBOOT_CONFIG_SYS_CPU
	default "generic"

config UBOOT_CONFIG_SYS_CONFIG_NAME
	default "qemu-riscv"

config UBOOT_CONFIG_SYS_TEXT_BASE
	default 0x81200000 if UBOOT_CONFIG_SPL
	default 0x80000000 if ! UBOOT_CONFIG_RISCV_SMODE
	default 0x80200000 if UBOOT_CONFIG_RISCV_SMODE && UBOOT_CONFIG_ARCH_RV64I
	default 0x80400000 if UBOOT_CONFIG_RISCV_SMODE && UBOOT_CONFIG_ARCH_RV32I

config UBOOT_CONFIG_SPL_TEXT_BASE
	default 0x80000000

config UBOOT_CONFIG_SPL_OPENSBI_LOAD_ADDR
	hex
	default 0x81000000

config UBOOT_CONFIG_BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select UBOOT_CONFIG_GENERIC_RISCV
	select UBOOT_CONFIG_SUPPORT_SPL
	imply AHCI
	imply SMP
	imply BOARD_LATE_INIT
	imply PCI_INIT_R
	imply SPL_RAM_SUPPORT
	imply SPL_RAM_DEVICE
	imply CMD_PCI
	imply CMD_POWEROFF
	imply CMD_SCSI
	imply CMD_PING
	imply CMD_EXT2
	imply CMD_EXT4
	imply CMD_FAT
	imply CMD_FS_GENERIC
	imply DOS_PARTITION
	imply ISO_PARTITION
	imply EFI_PARTITION
	imply SCSI_AHCI
	imply AHCI_PCI
	imply E1000
	imply NVME
	imply PCI
	imply PCIE_ECAM_GENERIC
	imply SCSI
	imply DM_SCSI
	imply SYS_NS16550
	imply SIFIVE_SERIAL
	imply SYSRESET
	imply SYSRESET_CMD_POWEROFF
	imply SYSRESET_SYSCON
	imply VIRTIO_MMIO
	imply VIRTIO_PCI
	imply VIRTIO_NET
	imply VIRTIO_BLK
	imply MTD_NOR_FLASH
	imply CFI_FLASH

endif
