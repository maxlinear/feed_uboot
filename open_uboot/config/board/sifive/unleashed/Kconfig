if UBOOT_CONFIG_TARGET_SIFIVE_UNLEASHED

config UBOOT_CONFIG_SYS_BOARD
	default "unleashed"

config UBOOT_CONFIG_SYS_VENDOR
	default "sifive"

config UBOOT_CONFIG_SYS_CPU
	default "fu540"

config UBOOT_CONFIG_SYS_CONFIG_NAME
	default "sifive-unleashed"

config UBOOT_CONFIG_SYS_TEXT_BASE
	default 0x80200000 if UBOOT_CONFIG_SPL
	default 0x80000000 if ! UBOOT_CONFIG_RISCV_SMODE
	default 0x80200000 if UBOOT_CONFIG_RISCV_SMODE

config UBOOT_CONFIG_SPL_TEXT_BASE
	default 0x08000000

config UBOOT_CONFIG_SPL_OPENSBI_LOAD_ADDR
	default 0x80000000

config UBOOT_CONFIG_BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select UBOOT_CONFIG_SIFIVE_FU540
	select UBOOT_CONFIG_ENV_IS_IN_SPI_FLASH
	select UBOOT_CONFIG_BINMAN
	select UBOOT_CONFIG_RESET_SIFIVE
	imply CMD_DHCP
	imply CMD_EXT2
	imply CMD_EXT4
	imply CMD_FAT
	imply CMD_FS_GENERIC
	imply CMD_GPT
	imply PARTITION_TYPE_GUID
	imply CMD_NET
	imply CMD_PING
	imply CMD_SF
	imply DOS_PARTITION
	imply EFI_PARTITION
	imply IP_DYN
	imply ISO_PARTITION
	imply PHY_LIB
	imply PHY_MSCC
	imply SPI_FLASH
	imply SPI_FLASH_ISSI
	imply SYSRESET
	imply SYSRESET_GPIO
	imply CMD_I2C

endif
