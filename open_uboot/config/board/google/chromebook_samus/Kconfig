if UBOOT_CONFIG_TARGET_CHROMEBOOK_SAMUS || UBOOT_CONFIG_TARGET_CHROMEBOOK_SAMUS_TPL

config UBOOT_CONFIG_SYS_BOARD
	default "chromebook_samus"

config UBOOT_CONFIG_SYS_VENDOR
	default "google"

config UBOOT_CONFIG_SYS_SOC
	default "broadwell"

config UBOOT_CONFIG_SYS_CONFIG_NAME
	default "chromebook_samus" if UBOOT_CONFIG_TARGET_CHROMEBOOK_SAMUS
	default "chromebook_samus" if UBOOT_CONFIG_TARGET_CHROMEBOOK_SAMUS_TPL

config UBOOT_CONFIG_SYS_TEXT_BASE
	default 0xffe00000

config UBOOT_CONFIG_BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select UBOOT_CONFIG_X86_RESET_VECTOR
	select UBOOT_CONFIG_USE_EARLY_BOARD_INIT
	select UBOOT_CONFIG_INTEL_BROADWELL
	select UBOOT_CONFIG_HAVE_INTEL_ME
	select UBOOT_CONFIG_BOARD_ROMSIZE_KB_8192
	select UBOOT_CONFIG_SPI_FLASH_WINBOND

config UBOOT_CONFIG_PCIE_ECAM_BASE
	default 0xf0000000

config UBOOT_CONFIG_EARLY_POST_CROS_EC
	bool "Enable early post to Chrome OS EC"
	default y

config UBOOT_CONFIG_SYS_CAR_ADDR
	hex
	default 0xff7c0000

config UBOOT_CONFIG_SYS_CAR_SIZE
	hex
	default 0x40000

endif

if UBOOT_CONFIG_TARGET_CHROMEBOOK_SAMUS_TPL

config UBOOT_CONFIG_BOARD_SPECIFIC_OPTIONS_TPL # dummy
	def_bool y
	select UBOOT_CONFIG_SPL
	select UBOOT_CONFIG_TPL

endif
