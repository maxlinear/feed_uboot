menu "MediaTek MIPS platforms"
	depends on UBOOT_CONFIG_ARCH_MTMIPS

config UBOOT_CONFIG_SYS_VENDOR
	default "mediatek" if UBOOT_CONFIG_BOARD_MT7628_RFB || UBOOT_CONFIG_BOARD_MT7620_RFB || UBOOT_CONFIG_BOARD_MT7620_MT7530_RFB

config UBOOT_CONFIG_SYS_MALLOC_F_LEN
	default 0x1000

config UBOOT_CONFIG_SYS_SOC
	default "mt7620" if UBOOT_CONFIG_SOC_MT7620
	default "mt7628" if UBOOT_CONFIG_SOC_MT7628

config UBOOT_CONFIG_SYS_DCACHE_SIZE
	default 32768

config UBOOT_CONFIG_SYS_DCACHE_LINE_SIZE
	default 32

config UBOOT_CONFIG_SYS_ICACHE_SIZE
	default 65536

config UBOOT_CONFIG_SYS_ICACHE_LINE_SIZE
	default 32

config UBOOT_CONFIG_SYS_TEXT_BASE
	default 0x9c000000 if ! UBOOT_CONFIG_SPL
	default 0x80200000 if UBOOT_CONFIG_SPL

config UBOOT_CONFIG_SPL_TEXT_BASE
	default 0x9c000000

config UBOOT_CONFIG_SPL_PAYLOAD
	default "u-boot-lzma.img" if UBOOT_CONFIG_SPL_LZMA

config UBOOT_CONFIG_BUILD_TARGET
	default "u-boot-with-spl.bin" if UBOOT_CONFIG_SPL
	default "u-boot.bin"

choice
	prompt "MediaTek MIPS SoC select"

config UBOOT_CONFIG_SOC_MT7620
	bool "MT7620"
	select UBOOT_CONFIG_SYS_CACHE_SHIFT_5
	select UBOOT_CONFIG_SYS_MIPS_CACHE_INIT_RAM_LOAD
	select UBOOT_CONFIG_PINCTRL_MT7620
	select UBOOT_CONFIG_MT7620_SERIAL
	select UBOOT_CONFIG_MISC
	select UBOOT_CONFIG_SPL_SEPARATE_BSS if SPL
	select UBOOT_CONFIG_SPL_LOADER_SUPPORT if SPL
	select UBOOT_CONFIG_SPL_OF_CONTROL if SPL_DM
	select UBOOT_CONFIG_SPL_OF_PLATDATA if SPL_DM
	select UBOOT_CONFIG_SPL_DM_SERIAL if SPL_DM
	help
	  This supports MediaTek MT7620.

config UBOOT_CONFIG_SOC_MT7628
	bool "MT7628"
	select UBOOT_CONFIG_SYS_CACHE_SHIFT_5
	select UBOOT_CONFIG_MIPS_INIT_STACK_IN_SRAM
	select UBOOT_CONFIG_MIPS_SRAM_INIT
	select UBOOT_CONFIG_SYS_MIPS_CACHE_INIT_RAM_LOAD
	select UBOOT_CONFIG_PINCTRL_MT7628
	select UBOOT_CONFIG_MTK_SERIAL
	select UBOOT_CONFIG_SYSRESET
	select UBOOT_CONFIG_SYSRESET_RESETCTL
	select UBOOT_CONFIG_SPL_SEPARATE_BSS if SPL
	select UBOOT_CONFIG_SPL_INIT_STACK_WITHOUT_MALLOC_F if SPL
	select UBOOT_CONFIG_SPL_LOADER_SUPPORT if SPL
	select UBOOT_CONFIG_SPL_OF_CONTROL if SPL_DM
	select UBOOT_CONFIG_SPL_SIMPLE_BUS if SPL_DM
	select UBOOT_CONFIG_SPL_DM_SERIAL if SPL_DM
	select UBOOT_CONFIG_SPL_CLK if SPL_DM && UBOOT_CONFIG_SPL_SERIAL
	select UBOOT_CONFIG_SPL_SYSRESET if SPL_DM
	select UBOOT_CONFIG_SPL_OF_LIBFDT if SPL_OF_CONTROL
	help
	  This supports MediaTek MT7628/MT7688.

endchoice

source "mt7620/Kconfig"
source "mt7628/Kconfig"

endmenu
