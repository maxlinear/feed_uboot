if UBOOT_CONFIG_ARCH_SOCFPGA

config UBOOT_CONFIG_ERR_PTR_OFFSET
	default 0xfffec000 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5 # Boot ROM range

config UBOOT_CONFIG_NR_DRAM_BANKS
	default 1

config UBOOT_CONFIG_SOCFPGA_SECURE_VAB_AUTH
	bool "Enable boot image authentication with Secure Device Manager"
	depends on UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX || UBOOT_CONFIG_TARGET_SOCFPGA_N5X
	select UBOOT_CONFIG_FIT_IMAGE_POST_PROCESS
	select UBOOT_CONFIG_SHA384
	select UBOOT_CONFIG_SHA512
	select UBOOT_CONFIG_SPL_FIT_IMAGE_POST_PROCESS
	help
	 All images loaded from FIT will be authenticated by Secure Device
	 Manager.

config UBOOT_CONFIG_SOCFPGA_SECURE_VAB_AUTH_ALLOW_NON_FIT_IMAGE
	bool "Allow non-FIT VAB signed images"
	depends on UBOOT_CONFIG_SOCFPGA_SECURE_VAB_AUTH

config UBOOT_CONFIG_SPL_SIZE_LIMIT
	default 0x10000 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_SPL_SIZE_LIMIT_PROVIDE_STACK
	default 0x200 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_SPL_STACK_R_ADDR
	default 0x00800000 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_SPL_SYS_MALLOC_F_LEN
	default 0x800 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_SYS_MMCSD_RAW_MODE_U_BOOT_PARTITION_TYPE
	default 0xa2

config UBOOT_CONFIG_SYS_MALLOC_F_LEN
	default 0x2000 if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10
	default 0x2000 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_SYS_TEXT_BASE
	default 0x01000040 if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10
	default 0x01000040 if UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX
	bool
	select UBOOT_CONFIG_ARMV8_MULTIENTRY
	select UBOOT_CONFIG_ARMV8_SET_SMPEN
	select UBOOT_CONFIG_BINMAN if SPL_ATF
	select UBOOT_CONFIG_CLK
	select UBOOT_CONFIG_FPGA_INTEL_SDM_MAILBOX
	select UBOOT_CONFIG_NCORE_CACHE
	select UBOOT_CONFIG_SPL_CLK if SPL
	select UBOOT_CONFIG_TARGET_SOCFPGA_SOC64

config UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5
	bool
	select UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10
	bool
	select UBOOT_CONFIG_SPL_ALTERA_SDRAM
	select UBOOT_CONFIG_SPL_BOARD_INIT if SPL
	select UBOOT_CONFIG_SPL_CACHE if SPL
	select UBOOT_CONFIG_CLK
	select UBOOT_CONFIG_SPL_CLK if SPL
	select UBOOT_CONFIG_DM_I2C
	select UBOOT_CONFIG_DM_RESET
	select UBOOT_CONFIG_SPL_DM_RESET if SPL
	select UBOOT_CONFIG_REGMAP
	select UBOOT_CONFIG_SPL_REGMAP if SPL
	select UBOOT_CONFIG_SYSCON
	select UBOOT_CONFIG_SPL_SYSCON if SPL
	select UBOOT_CONFIG_ETH_DESIGNWARE_SOCFPGA
	imply FPGA_SOCFPGA
	imply SPL_USE_TINY_PRINTF

config UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5
	bool
	select UBOOT_CONFIG_TARGET_SOCFPGA_GEN5

config UBOOT_CONFIG_TARGET_SOCFPGA_GEN5
	bool
	select UBOOT_CONFIG_SPL_ALTERA_SDRAM
	imply FPGA_SOCFPGA
	imply SPL_SIZE_LIMIT_SUBTRACT_GD
	imply SPL_SIZE_LIMIT_SUBTRACT_MALLOC
	imply SPL_STACK_R
	imply SPL_SYS_MALLOC_SIMPLE
	imply SPL_USE_TINY_PRINTF

config UBOOT_CONFIG_TARGET_SOCFPGA_N5X
	bool
	select UBOOT_CONFIG_ARMV8_MULTIENTRY
	select UBOOT_CONFIG_ARMV8_SET_SMPEN
	select UBOOT_CONFIG_BINMAN if SPL_ATF
	select UBOOT_CONFIG_CLK
	select UBOOT_CONFIG_FPGA_INTEL_SDM_MAILBOX
	select UBOOT_CONFIG_NCORE_CACHE
	select UBOOT_CONFIG_SPL_ALTERA_SDRAM
	select UBOOT_CONFIG_SPL_CLK if SPL
	select UBOOT_CONFIG_TARGET_SOCFPGA_SOC64

config UBOOT_CONFIG_TARGET_SOCFPGA_N5X_SOCDK
	bool "Intel eASIC SoCDK (N5X)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_N5X

config UBOOT_CONFIG_TARGET_SOCFPGA_SOC64
	bool

config UBOOT_CONFIG_TARGET_SOCFPGA_STRATIX10
	bool
	select UBOOT_CONFIG_ARMV8_MULTIENTRY
	select UBOOT_CONFIG_ARMV8_SET_SMPEN
	select UBOOT_CONFIG_BINMAN if SPL_ATF
	select UBOOT_CONFIG_FPGA_INTEL_SDM_MAILBOX
	select UBOOT_CONFIG_TARGET_SOCFPGA_SOC64

choice
	prompt "Altera SOCFPGA board select"
	optional

config UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX_SOCDK
	bool "Intel SOCFPGA SoCDK (Agilex)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX

config UBOOT_CONFIG_TARGET_SOCFPGA_ARIES_MCVEVK
	bool "Aries MCVEVK (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10_SOCDK
	bool "Altera SOCFPGA SoCDK (Arria 10)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10

config UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SECU1
	bool "ABB SECU1 (Arria V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5
	select UBOOT_CONFIG_VENDOR_KM

config UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SOCDK
	bool "Altera SOCFPGA SoCDK (Arria V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5

config UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5_SOCDK
	bool "Altera SOCFPGA SoCDK (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_DEVBOARDS_DBM_SOC1
	bool "Devboards DBM-SoC1 (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_EBV_SOCRATES
	bool "EBV SoCrates (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_IS1
	bool "IS1 (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_SOFTING_VINING_FPGA
	bool "Softing VIN|ING FPGA (Cyclone V)"
	select UBOOT_CONFIG_BOARD_LATE_INIT
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_SR1500
	bool "SR1500 (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_STRATIX10_SOCDK
	bool "Intel SOCFPGA SoCDK (Stratix 10)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_STRATIX10

config UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE0_NANO
	bool "Terasic DE0-Nano-Atlas (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE10_NANO
	bool "Terasic DE10-Nano (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE1_SOC
	bool "Terasic DE1-SoC (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

config UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_SOCKIT
	bool "Terasic SoCkit (Cyclone V)"
	select UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5

endchoice

config UBOOT_CONFIG_SYS_BOARD
	default "agilex-socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX_SOCDK
	default "arria5-socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SOCDK
	default "arria10-socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10_SOCDK
	default "cyclone5-socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5_SOCDK
	default "dbm-soc1" if UBOOT_CONFIG_TARGET_SOCFPGA_DEVBOARDS_DBM_SOC1
	default "de0-nano-soc" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE0_NANO
	default "de1-soc" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE1_SOC
	default "de10-nano" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE10_NANO
	default "is1" if UBOOT_CONFIG_TARGET_SOCFPGA_IS1
	default "mcvevk" if UBOOT_CONFIG_TARGET_SOCFPGA_ARIES_MCVEVK
	default "n5x-socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_N5X_SOCDK
	default "secu1" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SECU1
	default "sockit" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_SOCKIT
	default "socrates" if UBOOT_CONFIG_TARGET_SOCFPGA_EBV_SOCRATES
	default "sr1500" if UBOOT_CONFIG_TARGET_SOCFPGA_SR1500
	default "stratix10-socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_STRATIX10_SOCDK
	default "vining_fpga" if UBOOT_CONFIG_TARGET_SOCFPGA_SOFTING_VINING_FPGA

config UBOOT_CONFIG_SYS_VENDOR
	default "intel" if UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX_SOCDK
	default "intel" if UBOOT_CONFIG_TARGET_SOCFPGA_N5X_SOCDK
	default "altera" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SOCDK
	default "altera" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10_SOCDK
	default "altera" if UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5_SOCDK
	default "altera" if UBOOT_CONFIG_TARGET_SOCFPGA_STRATIX10_SOCDK
	default "aries" if UBOOT_CONFIG_TARGET_SOCFPGA_ARIES_MCVEVK
	default "devboards" if UBOOT_CONFIG_TARGET_SOCFPGA_DEVBOARDS_DBM_SOC1
	default "ebv" if UBOOT_CONFIG_TARGET_SOCFPGA_EBV_SOCRATES
	default "keymile" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SECU1
	default "softing" if UBOOT_CONFIG_TARGET_SOCFPGA_SOFTING_VINING_FPGA
	default "terasic" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE0_NANO
	default "terasic" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE1_SOC
	default "terasic" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE10_NANO
	default "terasic" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_SOCKIT

config UBOOT_CONFIG_SYS_SOC
	default "socfpga"

config UBOOT_CONFIG_SYS_CONFIG_NAME
	default "socfpga_agilex_socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_AGILEX_SOCDK
	default "socfpga_arria5_secu1" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SECU1
	default "socfpga_arria5_socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA5_SOCDK
	default "socfpga_arria10_socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_ARRIA10_SOCDK
	default "socfpga_cyclone5_socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_CYCLONE5_SOCDK
	default "socfpga_dbm_soc1" if UBOOT_CONFIG_TARGET_SOCFPGA_DEVBOARDS_DBM_SOC1
	default "socfpga_de0_nano_soc" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE0_NANO
	default "socfpga_de1_soc" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE1_SOC
	default "socfpga_de10_nano" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_DE10_NANO
	default "socfpga_is1" if UBOOT_CONFIG_TARGET_SOCFPGA_IS1
	default "socfpga_mcvevk" if UBOOT_CONFIG_TARGET_SOCFPGA_ARIES_MCVEVK
	default "socfpga_n5x_socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_N5X_SOCDK
	default "socfpga_sockit" if UBOOT_CONFIG_TARGET_SOCFPGA_TERASIC_SOCKIT
	default "socfpga_socrates" if UBOOT_CONFIG_TARGET_SOCFPGA_EBV_SOCRATES
	default "socfpga_sr1500" if UBOOT_CONFIG_TARGET_SOCFPGA_SR1500
	default "socfpga_stratix10_socdk" if UBOOT_CONFIG_TARGET_SOCFPGA_STRATIX10_SOCDK
	default "socfpga_vining_fpga" if UBOOT_CONFIG_TARGET_SOCFPGA_SOFTING_VINING_FPGA

source "../../../board/keymile/Kconfig"

endif
