if UBOOT_CONFIG_ARCH_STM32

config UBOOT_CONFIG_STM32F4
	bool "stm32f4 family"
	select UBOOT_CONFIG_CLK
	select UBOOT_CONFIG_DM_GPIO
	select UBOOT_CONFIG_DM_RESET
	select UBOOT_CONFIG_MISC
	select UBOOT_CONFIG_PINCTRL
	select UBOOT_CONFIG_PINCTRL_STM32
	select UBOOT_CONFIG_RAM
	select UBOOT_CONFIG_STM32_RCC
	select UBOOT_CONFIG_STM32_RESET
	select UBOOT_CONFIG_STM32_SDRAM
	select UBOOT_CONFIG_STM32_SERIAL
	select UBOOT_CONFIG_STM32_TIMER
	select UBOOT_CONFIG_TIMER

config UBOOT_CONFIG_STM32F7
	bool "stm32f7 family"
	select UBOOT_CONFIG_CLK
	select UBOOT_CONFIG_DM_GPIO
	select UBOOT_CONFIG_DM_RESET
	select UBOOT_CONFIG_MISC
	select UBOOT_CONFIG_PINCTRL
	select UBOOT_CONFIG_PINCTRL_STM32
	select UBOOT_CONFIG_RAM
	select UBOOT_CONFIG_SPL
	select UBOOT_CONFIG_SPL_BOARD_INIT
	select UBOOT_CONFIG_SPL_CLK
	select UBOOT_CONFIG_SPL_DM
	select UBOOT_CONFIG_SPL_DM_RESET
	select UBOOT_CONFIG_SPL_DM_SEQ_ALIAS
	select UBOOT_CONFIG_SPL_DRIVERS_MISC
	select UBOOT_CONFIG_SPL_GPIO
	select UBOOT_CONFIG_SPL_LIBCOMMON_SUPPORT
	select UBOOT_CONFIG_SPL_LIBGENERIC_SUPPORT
	select UBOOT_CONFIG_SPL_MTD_SUPPORT
	select UBOOT_CONFIG_SPL_OF_CONTROL
	select UBOOT_CONFIG_SPL_OF_LIBFDT
	select UBOOT_CONFIG_SPL_OF_TRANSLATE
	select UBOOT_CONFIG_SPL_PINCTRL
	select UBOOT_CONFIG_SPL_RAM
	select UBOOT_CONFIG_SPL_SERIAL
	select UBOOT_CONFIG_SPL_SYS_MALLOC_SIMPLE
	select UBOOT_CONFIG_SPL_TIMER
	select UBOOT_CONFIG_SPL_XIP_SUPPORT
	select UBOOT_CONFIG_STM32_RCC
	select UBOOT_CONFIG_STM32_RESET
	select UBOOT_CONFIG_STM32_SDRAM
	select UBOOT_CONFIG_STM32_SERIAL
	select UBOOT_CONFIG_STM32_TIMER
	select UBOOT_CONFIG_SUPPORT_SPL
	select UBOOT_CONFIG_TIMER
	imply SPL_OS_BOOT

config UBOOT_CONFIG_STM32H7
	bool "stm32h7 family"
	select UBOOT_CONFIG_CLK
	select UBOOT_CONFIG_DM_GPIO
	select UBOOT_CONFIG_DM_RESET
	select UBOOT_CONFIG_MISC
	select UBOOT_CONFIG_PINCTRL
	select UBOOT_CONFIG_PINCTRL_STM32
	select UBOOT_CONFIG_RAM
	select UBOOT_CONFIG_REGMAP
	select UBOOT_CONFIG_STM32_RCC
	select UBOOT_CONFIG_STM32_RESET
	select UBOOT_CONFIG_STM32_SDRAM
	select UBOOT_CONFIG_STM32_SERIAL
	select UBOOT_CONFIG_STM32_TIMER
	select UBOOT_CONFIG_SYSCON
	select UBOOT_CONFIG_TIMER

source "stm32f4/Kconfig"
source "stm32f7/Kconfig"
source "stm32h7/Kconfig"

endif
