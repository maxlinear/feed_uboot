if UBOOT_CONFIG_ARCH_QEMU

config UBOOT_CONFIG_SYS_VENDOR
	default "emulation"

config UBOOT_CONFIG_SYS_BOARD
	default "qemu-arm"

config UBOOT_CONFIG_SYS_CONFIG_NAME
	default "qemu-arm"

choice
	prompt "QEMU ARM architecture"
	default UBOOT_CONFIG_TARGET_QEMU_ARM_64BIT

config UBOOT_CONFIG_TARGET_QEMU_ARM_32BIT
	bool "ARMv7-A, 32bit"
	select UBOOT_CONFIG_ARCH_SUPPORT_PSCI
	select UBOOT_CONFIG_BOARD_LATE_INIT
	select UBOOT_CONFIG_CPU_V7A
	select UBOOT_CONFIG_SYS_ARCH_TIMER

config UBOOT_CONFIG_TARGET_QEMU_ARM_64BIT
	bool "ARMv8, 64bit"
	select UBOOT_CONFIG_ARM64
	select UBOOT_CONFIG_BOARD_LATE_INIT

endchoice

endif
