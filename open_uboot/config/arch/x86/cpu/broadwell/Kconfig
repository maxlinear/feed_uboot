config UBOOT_CONFIG_INTEL_BROADWELL
	bool
	select UBOOT_CONFIG_CACHE_MRC_BIN
	select UBOOT_CONFIG_ARCH_EARLY_INIT_R
	imply HAVE_INTEL_ME
	imply ENABLE_MRC_CACHE
	imply AHCI_PCI
	imply ICH_SPI
	imply INTEL_BROADWELL_GPIO
	imply SCSI
	imply SCSI_AHCI
	imply SPI_FLASH
	imply USB
	imply USB_EHCI_HCD
	imply VIDEO_BROADWELL_IGD

if UBOOT_CONFIG_INTEL_BROADWELL

config UBOOT_CONFIG_DCACHE_RAM_BASE
	default 0xff7c0000

config UBOOT_CONFIG_DCACHE_RAM_SIZE
	default 0x40000

config UBOOT_CONFIG_DCACHE_RAM_MRC_VAR_SIZE
	default 0x30000

config UBOOT_CONFIG_CPU_SPECIFIC_OPTIONS
	def_bool y
	select UBOOT_CONFIG_SMM_TSEG
	select UBOOT_CONFIG_X86_RAMTEST

config UBOOT_CONFIG_SMM_TSEG_SIZE
	hex
	default 0x800000

endif
